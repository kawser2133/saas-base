{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Default": "Server=localhost;Port=5432;Database=saas_base_db;User Id=postgres;Password=YOUR_PASSWORD_HERE"
  },
  "Redis": {
    "Configuration": "localhost:6379,abortConnect=false"
  },
  "Jwt": {
    "Issuer": "saasbase",
    "Audience": "saasbase-clients",
    "Key": "YOUR_SUPER_SECRET_JWT_KEY_MINIMUM_64_CHARACTERS_LONG_FOR_SECURITY",
    "AccessTokenMinutes": 30
  },
  "SendGrid": {
    "ApiKey": "YOUR_SENDGRID_API_KEY",
    "FromEmail": "noreply@yourdomain.com",
    "FromName": "SaaSBase"
  },
  "Twilio": {
    "AccountSid": "YOUR_TWILIO_ACCOUNT_SID",
    "AuthToken": "YOUR_TWILIO_AUTH_TOKEN",
    "FromPhoneNumber": "+1234567890"
  },
  "AppSettings": {
    "BaseUrl": "http://localhost:4200",
    "BackendUrl": "http://localhost:5091",
    "CacheExpirationMinutes": 30
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "https://yourdomain.com"
    ]
  },
  "AllowedHosts": "*"
}
